<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<!-- maven version, 메이븐 설정 스펙의 버전. -->
	<modelVersion>4.0.0</modelVersion>
	<!-- project를 개발하는 회사의 도메인, 전 세계에서 유일한 값을 주기위해 -->
	<groupId>com.mycompany</groupId>
	<!-- project의 식별명 -->
	<artifactId>SpringWebProgramming</artifactId>
	<!-- 프로젝트의 버전 -->
	<version>1.0</version>
	<!-- 프로젝트의 최종 산출물 형태 -->
	<packaging>war</packaging>
	<!-- 프로젝트의 이름, 사용자가 부르기 쉬운 형태(중복가능), 일반적으로 생략 -->
	<name>SpringWebProgramming</name>
	<!-- 프로젝트의 설명 -->
	<description>spring study project</description>

	<!-- 의존성 라이브러리 설정 -->
	<dependencies>
		<!-- maven이 모르는 servlet라이브러리 등록, 서블릿 API 라이브러리 설정 -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.1.0</version>
		</dependency>
		<!-- jsp 관련 라이브러리, JSP API 라이브러리 설정 -->
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>javax.servlet.jsp-api</artifactId>
			<version>2.3.1</version>
		</dependency>
		<!-- JSTL 라이브러리 설정 -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jstl</artifactId>
			<version>1.2</version>
		</dependency>
		<!-- Spring webmvc 라이브러리 설정 -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc</artifactId>
			<version>4.3.8.RELEASE</version>
		</dependency>
		<!-- 파일 업로드를 위한 commons 라이브러리 설정 -->
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
			<version>1.3.2</version>
		</dependency>
		<!-- 로깅을 위한 SLF4J와 Log4j 라이브러리 설정 -->
		<dependency><!-- slf4j 인터페이스 라이브러리 -->
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.25</version>
		</dependency>
		<dependency><!-- slf4j 인터페이스 구현(log4j) 클래스 라이브러 -->
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-slf4j-impl</artifactId>
			<version>2.8.2</version>
		</dependency>
		<!-- log4j library -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-api</artifactId>
			<version>2.8.2</version>
		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>2.8.2</version>
		</dependency>
		<!-- Oracl JDBC Driver(mvn repo use) -->
		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>ojdbc6</artifactId>
			<version>11.2.0.4.0-atlassian-hosted</version>
		</dependency>

	</dependencies>

	<!-- mvn repository 저장소 등록 -->
	<repositories>
		<repository>
			<id>mvnrepository</id>
			<name>mvnrepo</name>
			<url>https://maven.atlassian.com/3rdparty</url>
		</repository>
	</repositories>



	<!-- 프로젝트를 빌드할때 사용할 정보 -->
	<build>
		<!-- 자바 소스의 경로 -->
		<sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<directory>src</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
		<!-- 프로젝트를 빌드할때 사용하는 Tool, 어떤 plugin을 사용하느냐에 따라 달라질 수 있다. -->
		<plugins>
			<plugin>
				<!-- maven complier version -->
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.5.1</version>
				<configuration>
					<!-- javac version -->
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<!-- 압축할때 사용할 tool version -->
				<artifactId>maven-war-plugin</artifactId>
				<version>3.0.0</version>
				<configuration>
					<!-- 여기있는 내용을 압축하겠다는 설정 -->
					<warSourceDirectory>WebContent</warSourceDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>