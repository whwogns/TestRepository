package ch12.exam10;

public class StopThreadExample {

	public static void main(String[] args) {
		
		//how1
		
		PrintThread1 thread = new PrintThread1();
		thread.start();
		
		try {
			Thread.sleep(2000);
		} catch (InterruptedException e) {
			
		}
		thread.setStop(true);
		
		
		//how2
		//interrupt는 스레드가 일시정지상태에 있을때만 영향을 받는다./ 실행중이면 이에 영향없다.
	}

}
